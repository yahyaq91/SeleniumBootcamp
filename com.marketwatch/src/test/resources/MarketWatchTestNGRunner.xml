<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="MarketWatch" verbose="1" >

    <listeners>
        <listener class-name="listeners.AnnotationTransformer"/>
    </listeners>

    <parameter name="browser" value="chrome"/>
    <parameter name="url" value="http://marketwatch.com"/>

    <test name="MarketWatch - USMarket">
        <classes>
            <class name="TestUnitedStatesMarketPage"/>
        </classes>
    </test>
    <test name="MarketWatch - EuropeMarket">
        <classes>
            <class name="TestEuropeMarketPage"/>
        </classes>
    </test>
    <test name="MarketWatch - AsiaMarket">
        <classes>
            <class name="TestAsiaMarketPage"/>
        </classes>
    </test>

</suite>

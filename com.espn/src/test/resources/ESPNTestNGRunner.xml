<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="ESPN" verbose="1" >

    <listeners>
        <listener class-name="listeners.AnnotationTransformer"/>
    </listeners>

    <parameter name="browser" value="chrome"/>
    <parameter name="url" value="http://espn.com"/>

    <test name="Soccer - Locating Teams">
        <classes>
            <class name="espn.soccer_page.TestLocatingSoccerTeams"/>
        </classes>
    </test>

    <test name="Soccer - Team Info">
        <classes>
            <class name="espn.soccer_page.TestTeamInfo"/>
        </classes>
    </test>


</suite>
